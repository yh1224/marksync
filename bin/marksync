#!/bin/sh
MARKSYNC_HOME="$( cd "$( dirname "$0" )" && cd .. && pwd )"
MARKSYNC_BIN="${MARKSYNC_HOME}/build/install/marksync/bin/marksync"

BUILD=
if [ "$1" = "--build" ]; then
  BUILD=yes
  shift
fi
if [ -n "${BUILD}" -o ! -e ${MARKSYNC_BIN} ];then
  (cd "${MARKSYNC_HOME}" && ./gradlew installDist) || exit $?
fi

ARGS=$@
if [ $# -eq 0 ]; then
  ARGS="--help"
fi
${MARKSYNC_BIN} ${ARGS}
